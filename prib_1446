class Solution {
    public int maxPower(String s) {
        char[] arr = s.toCharArray();
        int count = 1, max = 1;
        for(int i = 1;i < arr.length;i++){
            if(arr[i-1] == arr[i]){
                count++;
                max = Math.max(count,max);
            }
            else{
                count = 1;
            }
        }
        return max;
    }
}
